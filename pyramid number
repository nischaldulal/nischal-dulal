#include<stdio.h>// to be cntinue//
int main(){
    int n;
    scanf("%d",&n);
    int nsp=n-1; ;
    for(int i=1;i<=n;i++){
        int a=i;
        for(int k=1;k<=nsp;k++){
        printf(" ");
        }
        nsp--;
        for(int j=1;j<=i;j++){
        printf("%d",a);
        a=a+1;}printf("\n");
    }
    return 0;
}
